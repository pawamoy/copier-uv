[build-system]
requires = ["hatchling"]
build-backend = "hatchling.build"

[project]
name = "{{ python_package_distribution_name }}"
description = "{{ project_description }}"
authors = [{name = "{{ author_fullname }}", email = "{{ author_email }}"}]
license = "{{ copyright_license }}"
license-files = ["LICENSE"]
readme = "README.md"
requires-python = "=={{ python_version }}.*"
keywords = []
dynamic = ["version"]
classifiers = [
    "Development Status :: 4 - Beta",
    "Intended Audience :: Developers",
    "Programming Language :: Python",
    "Programming Language :: Python :: 3",
    "Programming Language :: Python :: 3 :: Only",
    "Programming Language :: Python :: {{ python_version }}",
    "Topic :: Documentation",
    "Topic :: Software Development",
    "Topic :: Utilities",
    "Typing :: Typed",
]
dependencies = [
    "loguru>=0.7",
]

[project.urls]
Homepage = "https://{{ repository_namespace }}.{{ repository_provider.rsplit('.', 1)[0] }}.io/{{ repository_name }}"
Documentation = "https://{{ repository_namespace }}.{{ repository_provider.rsplit('.', 1)[0] }}.io/{{ repository_name }}"
Changelog = "https://{{ repository_namespace }}.{{ repository_provider.rsplit('.', 1)[0] }}.io/{{ repository_name }}/changelog"
Repository = "https://{{ repository_provider }}/{{ repository_namespace }}/{{ repository_name }}"
Issues = "https://{{ repository_provider }}/{{ repository_namespace }}/{{ repository_name }}/issues"
Discussions = "https://{{ repository_provider }}/{{ repository_namespace }}/{{ repository_name }}/discussions"
Gitter = "https://gitter.im/{% if repository_namespace != author_username %}{{ repository_namespace }}/{{ repository_name }}{% else %}{{ repository_name }}/community{% endif %}"

[tool.hatch.version]
path = "src/{{ python_package_import_name }}/__init__.py"

[dependency-groups]
test = [
    "pytest>=8.2",
    "pytest-cov>=5.0",
    "pytest-randomly>=3.15",
]
docs = [
    "markdown-callouts>=0.4",
    "markdown-exec>=1.8",
    "mkdocs>=1.6",
    "mkdocs-coverage>=1.0",
    "mkdocs-git-revision-date-localized-plugin>=1.2",
    "mkdocs-llmstxt>=0.2",
    "mkdocs-material>=9.5",
    "mkdocs-minify-plugin>=0.8",
    "mkdocs-section-index>=0.3",
    "mkdocstrings[python]>=0.29",
]
{%- if include_notebooks %}
notebooks = [
    "marimo[recommended]>=0.18",
]
{%- endif %}

[tool.uv]
default-groups = ["test", "docs"{% if include_notebooks %}, "notebooks"{% endif %}]

# ==============================
# taskipy - Task Runner
# ==============================
# Run tasks with: uvx --from taskipy task <task-name>
# List tasks with: uvx --from taskipy task --list

[tool.taskipy.settings]
use_vars = true

[tool.taskipy.variables]
src = "src"
tests = "tests"
all = "src tests"

[tool.taskipy.tasks]
# Setup
setup = { cmd = "uv sync", help = "Install dependencies" }

# Formatting
format = { cmd = "uvx ruff format {all} && uvx ruff check --fix --exit-zero {all}", help = "Format code and auto-fix lint issues" }
format_check = { cmd = "uvx ruff format --check {all}", help = "Check code formatting (CI)" }

# Quality checks
check = { cmd = "uvx ruff check {all} && uvx ty check {src}", help = "Run lint and type checks" }
lint = { cmd = "uvx ruff check --fix {all}", help = "Run linting only" }
typecheck = { cmd = "uvx ty check {src}", help = "Run type checking only" }

# Testing
test = { cmd = "uv run pytest {tests}", help = "Run test suite" }
test_cov = { cmd = "uv run pytest {tests} --cov={src} --cov-report=html --cov-report=term", help = "Run tests with coverage" }

# Documentation
docs = { cmd = "uv run mkdocs serve", help = "Serve documentation locally" }
docs_build = { cmd = "uv run mkdocs build --strict", help = "Build documentation" }

# Release
changelog = { cmd = "uvx git-changelog --bump auto", help = "Update changelog" }

# Utilities
clean = { cmd = "rm -rf build dist htmlcov site .coverage* .pdm-build .pytest_cache .mypy_cache .ruff_cache __pycache__ .venvs", help = "Delete build artifacts and caches" }

# Profiling
profile = { cmd = "uvx scalene", help = "Profile with Scalene (CPU, memory, GPU)" }
profile_memory = { cmd = "uvx memray run -o memray-output.bin", help = "Profile memory with Memray" }
profile_memory_report = { cmd = "uvx memray flamegraph memray-output.bin -o memray-flamegraph.html", help = "Generate Memray flamegraph report" }
