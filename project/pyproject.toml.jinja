[build-system]
requires = ["hatchling"]
build-backend = "hatchling.build"

[project]
name = "{{ python_package_distribution_name }}"
description = "{{ project_description }}"
authors = [{name = "{{ author_fullname }}", email = "{{ author_email }}"}]
license = "{{ copyright_license }}"
license-files = ["LICENSE"]
readme = "README.md"
requires-python = "=={{ python_version }}.*"
keywords = []
dynamic = ["version"]
classifiers = [
    "Programming Language :: Python",
    "Programming Language :: Python :: 3",
    "Programming Language :: Python :: 3 :: Only",
    "Programming Language :: Python :: {{ python_version }}",
    "Typing :: Typed",
]
dependencies = [
    "loguru>=0.7",
]

[project.urls]
Homepage = "https://{{ repository_namespace }}.{{ repository_provider.rsplit('.', 1)[0] }}.io/{{ repository_name }}"
Documentation = "https://{{ repository_namespace }}.{{ repository_provider.rsplit('.', 1)[0] }}.io/{{ repository_name }}"
Changelog = "https://{{ repository_namespace }}.{{ repository_provider.rsplit('.', 1)[0] }}.io/{{ repository_name }}/changelog"
Repository = "https://{{ repository_provider }}/{{ repository_namespace }}/{{ repository_name }}"
Issues = "https://{{ repository_provider }}/{{ repository_namespace }}/{{ repository_name }}/issues"
Discussions = "https://{{ repository_provider }}/{{ repository_namespace }}/{{ repository_name }}/discussions"

[tool.hatch.version]
path = "src/{{ python_package_import_name }}/__init__.py"

[dependency-groups]
test = [
    "pytest>=8.2",
    "pytest-cov>=5.0",
    "pytest-randomly>=3.15",
]
docs = [
    "ghp-import>=2.1",
    "markdown-callouts>=0.4",
    "markdown-exec>=1.8",
    "mkdocstrings[python]>=0.29",
    "zensical>=0.0.21",
]
{%- if include_notebooks %}
notebooks = [
    "marimo[recommended]>=0.18",
]
{%- endif %}

[tool.uv]
default-groups = ["test", "docs"{% if include_notebooks %}, "notebooks"{% endif %}]

# ==============================
# taskipy - Task Runner
# ==============================
# Run tasks with: uvx --from taskipy task <task-name>
# List tasks with: uvx --from taskipy task --list

[tool.taskipy.settings]
use_vars = true

[tool.taskipy.variables]
src = "src"
tests = "tests"
all = "src tests"
module = "{{ python_package_import_name }}"

[tool.taskipy.tasks]
# Module runner
run = { cmd = "uv run python -m {module}", help = "Run module entrypoint" }

# Setup
setup = { cmd = "uv sync", help = "Install dependencies" }

# Always write changes
format = { cmd = "uvx ruff format {all}", help = "Format code (writes changes)" }
lint = { cmd = "uvx ruff check --fix {all}", help = "Lint and auto-fix (writes changes)" }

# Convenience: run both
fix = { cmd = "task format && task lint", help = "Format + lint auto-fix" }

# Quality checks (read-only, for CI)
format_check = { cmd = "uvx ruff format --check {all}", help = "Check code formatting (CI)" }
lint_check = { cmd = "uvx ruff check {all}", help = "Check linting (CI)" }
typecheck = { cmd = "uvx ty check --config-file=config/ty.toml {src}", help = "Run type checking" }
test = { cmd = "uv run pytest {tests} --cov={src} --cov-report=html --cov-report=term", help = "Run tests with coverage" }
test_no_cov = { cmd = "uv run pytest {tests}", help = "Run test suite" }

# CI: all checks in one command (read-only)
ci = { cmd = "task format_check && task lint_check && task typecheck && task test", help = "Run all CI checks (format, lint, typecheck, test)" }

# Documentation
docs = { cmd = "uv run zensical serve", help = "Serve documentation locally" }
docs_build = { cmd = "uv run zensical build --clean --strict", help = "Build documentation (strict)" }

# Release
changelog = { cmd = "uvx --with 'packaging<26' git-changelog --bump auto", help = "Update changelog" }

# Utilities
clean = { cmd = "rm -rf build dist htmlcov site .coverage* .pytest_cache .ruff_cache __pycache__ .venvs .venv", help = "Delete build artifacts and caches" }

# Profiling (using module variable)
profile = { cmd = "uvx scalene -m {module}", help = "Profile module with Scalene (CPU, memory, GPU)" }
profile_memory = { cmd = "uvx memray run -m {module} -o memray-output.bin", help = "Profile module memory with Memray" }
profile_memory_report = { cmd = "uvx memray flamegraph memray-output.bin -o memray-flamegraph.html", help = "Generate Memray flamegraph report" }
